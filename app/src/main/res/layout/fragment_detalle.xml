<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.aaron.provhibernate.Detalle">

    <!-- TODO: Update blank fragment layout -->

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:id="@+id/relativeLayout"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:background="#FF3DCADD">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/id"
            android:id="@+id/textView"
            android:gravity="center|right"
            android:layout_alignParentTop="true"
            android:layout_alignBottom="@+id/tvIdDetalle"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_toLeftOf="@+id/tvIdDetalle"
            android:textStyle="bold"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/selecciona"
            android:id="@+id/tvIdDetalle"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/ibFoto"
            android:layout_toStartOf="@+id/ibFoto"
            android:layout_alignBottom="@+id/ibFoto"
            android:gravity="center"
            android:paddingRight="60dp"
            android:textStyle="bold"
            android:textSize="14sp" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ibFoto"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:src="@drawable/camara"
            android:background="#FF3DCADD" />
    </RelativeLayout>

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lvFotos"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/relativeLayout"
        android:divider="#ff3dcadd"
        android:dividerHeight="1px"/>

</RelativeLayout>
