<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.aaron.provhibernate" >

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-feature android:name="android.hardware.camera" android:required="false"/>
    <uses-feature android:name="android.hardware.camera.autofocus" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/launcher"
        android:logo="@drawable/icono"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".Main"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Actividad"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".Edicion"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".Eliminar"
            android:label="@string/app_name" >
        </activity>
        <provider
            android:name="com.aaron.provhibernate.ProveedorInmueble"
            android:authorities="com.aaron.contentprovinmo.proveedorinmueble"
            android:enabled="true"
            android:exported="true" >
        </provider>
    </application>

</manifest>
